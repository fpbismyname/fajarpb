---
import { Icon } from "astro-icon/components";
import type { BlockInterface, SocialMediaContentType } from "../../config/blocks.type";

interface Props extends BlockInterface<SocialMediaContentType> {}

const { name, contents } = Astro.props;
const content: SocialMediaContentType = contents;
---

<section id={name} class="relative py-24 lg:py-32">
    <div class="container mx-auto flex flex-col px-6">
        <div class="relative text-center">
            <h1 class="text-4xl lg:text-6xl font-bold">{content.title}</h1>
            <h3 class="text-md lg:text-xl my-4 text-base-content/50">{content.subtitle}</h3>
        </div>
        <div class="flex flex-row flex-wrap justify-center gap-4 mx-auto mt-12">
            {
                content.socials.map((item) => {
                    return (
                        <div class="card w-32 transition-all hover:scale-105 hover:border-primary/50 border rounded-box border-transparent">
                            <a href={item.href}>
                                <div class="card-body flex flex-col items-center">
                                    <Icon name={item.icon} width={32} height={32} />
                                    <p class="text-md my-2">{item.label}</p>
                                </div>
                            </a>
                        </div>
                    );
                })
            }
        </div>
    </div>
</section>
